FROM ibmcom/mq
USER 0
RUN mkdir -p /etc/mqm/mft
COPY *.mqsc /etc/mqm/mft/ 
COPY *.sh /etc/mqm/mft/ 
COPY mq.htpasswd /etc/mqm
RUN chmod 0660 /etc/mqm/mft/*.*
RUN chmod +x /etc/mqm/mft/*.sh
RUN chmod 0660 /etc/mqm/mq.htpasswd
USER 1001